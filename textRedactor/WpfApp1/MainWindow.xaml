                </Button>
            </WrapPanel>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom" >.</StatusBar>
        <ListBox DockPanel.Dock="Left" Width="200"></ListBox>
        <RichTextBox x:Name="txtbox" SpellCheck.IsEnabled="True" ></RichTextBox>
    </DockPanel>

</Window>
